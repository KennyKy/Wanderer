<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/darkblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/logo">

        <TextView
            android:layout_width="410dp"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/menu"
            android:text="Planejar Viagem"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textAlignment="center"
            android:layout_marginTop="7dp">
        </TextView>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:drawableLeft="@drawable/bed"
        android:text="Hospedagem"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="16dp"
        android:textSize="35dp"
        android:textColor="@color/black">
    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Custo médio (por noite):"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/black">
    </TextView>

    <EditText
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:hint=" Informe o custo médio">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Total de noites:"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/black">
    </TextView>

    <EditText
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:hint=" Informe o total de noites">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Total de quartos:"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textSize="20dp"
        android:textColor="@color/black">
    </TextView>

    <EditText
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:textSize="20dp"
        android:layout_marginLeft="18dp"
        android:background="@color/white"
        android:hint=" Informe o total de quartos">
    </EditText>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="Total:"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:textSize="30dp"
        android:textColor="@color/total">
    </TextView>

</LinearLayout>


